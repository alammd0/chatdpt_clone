generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String
  message   Message[]
  conversation ConversationalMessage[]
  createdAt DateTime  @default(now())
}

model ConversationalMessage {
  id      String    @id @default(cuid())
  text    String
  userId  String
  user    User      @relation(fields: [userId], references: [id])
  message Message[]
  createdAt DateTime  @default(now())
}

model Message {
  id                      String                @id @default(cuid())
  text                    String
  sender                  String
  conversationalMessageId String
  conversationalMessage   ConversationalMessage @relation(fields: [conversationalMessageId], references: [id])
  user                    User                  @relation(fields: [userId], references: [id])
  userId                  String
  createdAt               DateTime              @default(now())
}
